<%- include('partials/head', { page: 'register' }) %>

<div class="min-h-screen flex items-center justify-center relative overflow-hidden" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
  <!-- Energy Orbs (optional, tuned to match gradient) -->
  <div class="absolute -top-20 -left-20 w-64 h-64 bg-purple-400 rounded-full blur-3xl opacity-30 animate-pulse"></div>
  <div class="absolute bottom-10 right-10 w-72 h-72 bg-indigo-400 rounded-full blur-3xl opacity-20 animate-ping"></div>

  <!-- Glass Card -->
  <div class="relative z-10 w-full max-w-lg p-8 bg-white/10 backdrop-blur-xl border border-white/20 rounded-2xl shadow-[0_8px_32px_rgba(0,0,0,0.4)] hover:shadow-[0_8px_40px_rgba(102,126,234,0.6)] transition">
    <h2 class="text-3xl font-extrabold text-center text-white mb-2 tracking-wide drop-shadow-lg">ConvoManage</h2>
    <p class="text-center text-purple-200 mb-6 italic">Join the energy flow âš¡</p>

    <form action="/register" method="POST" class="flex flex-col gap-4">
      <!-- Name -->
      <div>
        <label class="block text-sm text-purple-200 mb-1">Name</label>
        <input type="text" name="name" required 
               class="w-full px-4 py-3 rounded-xl bg-white/20 border border-white/30 text-white placeholder-purple-200 focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:bg-white/30 transition">
      </div>

      <!-- Email -->
      <div>
        <label class="block text-sm text-purple-200 mb-1">Email</label>
        <input type="email" name="email" required 
               class="w-full px-4 py-3 rounded-xl bg-white/20 border border-white/30 text-white placeholder-purple-200 focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:bg-white/30 transition">
      </div>

      <!-- Password -->
      <div>
        <label class="block text-sm text-purple-200 mb-1">Password</label>
        <input type="password" name="password" required 
               class="w-full px-4 py-3 rounded-xl bg-white/20 border border-white/30 text-white placeholder-purple-200 focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:bg-white/30 transition">
      </div>

      <!-- Confirm Password -->
      <div>
        <label class="block text-sm text-purple-200 mb-1">Confirm Password</label>
        <input type="password" name="password2" required 
               class="w-full px-4 py-3 rounded-xl bg-white/20 border border-white/30 text-white placeholder-purple-200 focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:bg-white/30 transition">
      </div>

      <!-- Submit -->
      <button type="submit" 
              class="w-full mt-4 bg-gradient-to-r from-indigo-400 to-purple-600 text-white font-bold uppercase tracking-wider px-4 py-3 rounded-xl shadow-[0_0_15px_rgba(102,126,234,0.7)] hover:shadow-[0_0_25px_rgba(118,75,162,1)] transition">
        Register
      </button>
    </form>

    <!-- Login Redirect -->
    <p class="text-center text-purple-200 mt-6">
      Already have an account? 
      <a href="/login" class="text-indigo-300 hover:text-indigo-200 font-semibold transition">Login</a>
    </p>
  </div>
</div>

<%- include('partials/footer', { page: 'register' }) %>
